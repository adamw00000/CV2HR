@model JobOffer
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@{
    var authorizationResult = AuthorizationService.AuthorizeAsync(User, "Manager");
}

@{
    ViewData["Title"] = "Offer details";
}

<partial for="@Model" name="_JobOfferDetailsPartial" />

<div class="row row-box">
    <a asp-action="Index" class="btn btn-primary">Back to offers list</a>
</div>

@if ((await authorizationResult).Succeeded)
{
    <div class="row row-box" id="vuePage">
        <div class="col-md-12">
            <h2>Applications</h2>
            <table class="table table-striped table-hover" v-show="loading">
                <thead>
                    <tr>
                        <td>Name</td>
                        <td>Email</td>
                        <td>Phone</td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="4">Loading...</td>
                    </tr>
                </tbody>
            </table>
            <table class="table table-striped table-hover" v-show="!loading">
                <thead>
                    <tr>
                        <td>Name</td>
                        <td>Email</td>
                        <td>Phone</td>
                    </tr>
                </thead>
                <tbody id="applications"></tbody>
            </table>
        </div>
    </div>

    @section Scripts {
        <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.0.3.min.js"></script>

        <script src="https://cdn.jsdelivr.net/npm/vue@2.5.21/dist/vue.js"></script>
        <script>
            loadingData = {
                loading: true
            }
            var vm = new Vue({
                el: '#vuePage',
                data: loadingData
            });

            $(document).ready(function () {
                loadingData.loading = true;
                uri = '/api/applications/' + '@Model.Id';

                $.getJSON(uri)
                    .done(function (data) {
                        loadingData.loading = false;
                        $.each(data, function (key, application) {
                            $('<tr>' +
                                '<td><a href="/JobApplication/Details/' + application.id + '">' + application.firstName + ' ' + application.lastName + '</a></td>' +
                                '<td>' + application.emailAddress + '</td>' +
                                '<td>' + application.phoneNumber + '</td>' +
                                '</tr>').appendTo('#applications');
                        })
                    }
                )
            }
        );
        </script>
    }
}

